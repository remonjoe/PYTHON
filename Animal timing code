def cal(ht, up, down):
    tot_min = 0
    curr_height = 0

    while True:
       
        tot_min += 1
        curr_height += up
        if curr_height >= ht:
            break  
       
        tot_min += 1
        curr_height -= down

    print(f"Total time to climb {ht} meters: {tot_min} minutes")


cal(30, 10, 5)  
cal(21, 5, 3)   
